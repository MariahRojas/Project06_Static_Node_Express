extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        //- Interploation to dynamically add the project title.
        h1 #{project.project_name}

        //- & project description.
        p.lead.text-light
          | #{project.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        //- `each` iterator replaces the li tag below. I used interploation to dynamically add the technologies used in each project.
        ul
          each technology in project.technologies
            li #{technology}

        //- Template literals and interpolation to add URLs to the hrefs below so they link to the repo and the live version of each project.
        a.button.expanded(href=`${project.live_link}`) Live Demo
        a.button.expanded(href=`${project.github_link}`) GitHub Repo
    
    //- URLs in the src attributes below have template literals and interpolation to dynamically add three project images.
    img.image(src=`${project.image_urls[1]}`)
    img.image(src=`${project.image_urls[2]}`)
    img.image(src=`${project.image_urls[3]}`)